extends layout

block content
    head
      link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
      meta(charset='utf-8')
      meta(name='viewport' content='width=device-width, initial-scale=1')
    nav.navbar.navbar-expand-lg.mb-4.bg-info
      a.navbar-brand(href='/')
        img.d-inline-block.align-center(src='navbar_owl_icon.PNG' width='60' height='85' alt='')
      a.navbar-brand.ml-2.text-white(href='/')
        strong Samrt lamp data service
    .container-fluid
      .row
        .col-3

        .col-6
          .shadow.p-3.bg-white.rounded
            form(action='/join' method='post')
              .form-group
                label 아이디
                input.form-control(type='text' name='new_username' placeholder='Enter ID' required='')
              .form-group
                label 비밀번호
                input.form-control(type='password' name='new_password' placeholder='Enter Password' required='')
              button.btn.btn-outline-primary.btn-block(type='submit' value='Sign Up') 회원가입
        .col-3


    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js')
